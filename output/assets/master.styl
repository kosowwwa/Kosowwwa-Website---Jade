$primaryColor = #d1a74f;
$primaryBlue = #1e51a4;
$primaryGray = #9d9d9d;

.noshadow
    box-shadow none

.flex
    display flex
    flex-wrap wrap
.container
    width 90%
.hero
    width 100%
    height auto
    min-height 100vh
    background-color #222
    background-image url("../assets/img/alexandru-acea-582050-unsplash-min.jpg")
    background-size cover
    background-repeat no-repeat
    position relative
    &:after
        content ""
        position absolute
        width 100%
        height 100%
        background-color rgba(0,0,0,.7)
        top 0
        left 0
        z-index 0
    .container
        z-index 1
        width 90%
    nav
        padding-top 30px
        ul
            li
                a
                    &:hover
                        background-color rgba(0,0,0,0)
        a
            text-transform uppercase
            font-family "Rubik", sans-serif
            letter-spacing 3px
            font-size 0.8em
        .login-btn
            span
                background-color $primaryColor;
                border-radius 30px
                padding 10px 25px
    .brand-logo
        img
            width auto
            height 65px
            padding 10px
            margin-top 10px
    .heroContainer
        z-index 1
        position relative
        h1
            font-family "Rubik",sans-serif
            font-weight 100
            color white
    .sliderX
        position relative
        z-index 2
        padding-bottom 130px
        .slideOne
            border-bottom 5px solid $primaryColor
            p
                padding-bottom 20px
        .slideTwo
            border-bottom 5px solid transparent
            p
                padding-bottom 20px
        .slideThree
            border-bottom 5px solid transparent
            p
                padding-bottom 20px
        .col
            cursor pointer
        .active,.active1,.active2
            height 5px
            width 100%
            background-color $primaryColor
            margin-top 40px
        p,i
            color white
        p
            font-family "Rubik", sans-serif

.p130
    padding 130px 0
    hr
        margin 60px 0.75rem 40px 0.75rem
        height 1px
        border none
        background-color $primaryGray
        outline none

.gs-btn
    background-color $primaryBlue
    border-radius 30px
    padding 15px 35px
    text-transform uppercase
    font-family "Rubik", sans-serif
    letter-spacing 3px
    font-size 0.8em
    color white
    box-shadow 0 10px 35px rgba(0,0,0,.3)
    transition all .3s
    &:hover
        box-shadow 0 5px 15px rgba(0,0,0,.6)
.ddmH
    font-family "Rubik", sans-serif
    font-weight 500
.ddmP
    font-family "Rubik", sans-serif
    font-size 1.4em
    padding-bottom 40px
    color $primaryGray
.triFeatures
    span
        text-transform uppercase
        font-family "Rubik", sans-serif
        letter-spacing 3px
        font-size 0.9em
        font-weight 500
    p
        color $primaryGray
        font-family "Rubik", sans-serif
        font-weight 400

.blockSupport
    background-color $primaryColor
    background-image url('../assets/img/pattern.svg')
    background-attachment fixed
    background-repeat repeat
    background-size auto
    font-family "Rubik", sans-serif
    text-align center
    position relative
    z-index 0
    &:after
        content ""
        position absolute
        background radial-gradient(ellipse at center, rgba(209,167,79,1) 0%,rgba(209,167,79,.2) 100%)
        z-index 1
        width 100%
        height 100%
        top 0
        left 0
    .content
        z-index 2
        position relative
    i
        font-size 5em !important
        color white
        display block
        padding-bottom 0.5em
    span
        letter-spacing 5px
        font-weight 400
    p
        display block
        margin auto
        width 50%
        color #666
        margin-bottom 40px
    .chatNow
        color #343434 !important
        border 3px solid white
        padding 15px 30px
        border-radius 30px
        text-transform uppercase
        font-weight 500
        letter-spacing 5px
        transition all .7s
        box-shadow 0 10px 35px rgba(0,0,0,0)
        &:hover
            background-color white
            box-shadow 0 5px 15px rgba(0,0,0,.6)
.laptop
    width 100%
    height auto
footer
    padding 130px 0
    font-family "Rubik", sans-serif
    .col
        border-right 1px solid rgba(0,0,0,.1)
    .col:nth-last-child(4)
        border-right none
    .col:nth-last-child(2)
        text-align left
    .col:nth-last-child(1)
        border-right none
    .logo
        width 75%
        height auto
    p
        color $primaryGray
    h5
        font-family "Rubik", sans-serif
        margin 0
        padding 0
        font-weight 300
        color $primaryBlue
    li
        line-height 40px
        a
            color $primaryGray !important
            text-decoration none
    hr
        margin 15px 0
        height 1px
        border none
        background-color rgba(0,0,0,.1)
        outline none
.copyright
    width 100%
    background #e5e5e5
    padding 40px 0
    text-align center
    color #666
    font-family "Rubik", sans-serif
